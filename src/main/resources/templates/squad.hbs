{{#partial "content"}}
    <div id="hero" class="card">
        <img src="/images/blankmiddle.jpg" class="img-fluid ">
        <div class="card-img-overlay   d-flex flex-column align-items-center justify-content-center">
<!-- add member to squad-->
            <div class="hero-text text-center">
                <div id="newmember">
                    <p class="close">&cross;</p>
                    <h2>Choose Squad Members</h2>
                    {{#each heroes}}
                        <div class="hero-element">
                            <div class="hero-details">
                                <p>Name: {{name}}</p>
                                <p>Super power: {{ power }}</p>
                                <a href="/squad/new/{{id}}">Add To Squad</a>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <a href="/squad-form"><button class="listbtn btn-primary">Create A Squad</button></a>
                <br><br>
                <!--show squads-->
                {{#if squads}}
                  <h2>  HERE ARE YOUR SQUADS</h2>
                    {{#each squads}}
                        <div class="squads">
                            <img src="" alt="">
                            <div>
                                <h1>{{ squadName }} </h1>
                                <p>Purpose: {{cause}}</p>
                                <p>Max participants: {{ squadSize }}</p>
                                <br><br>
                                <h3>MEMBERS</h3>
                                <button class="addMember add-btn" >Add New Member</button>
                                {{#each squadMembers}}
                                    <div class="members">
                                        <h5>Name: {{name}}</h5>
                                        <h5>Power: {{power}}</h5>
                                        <h5>Weakness: {{weakness}}</h5>
                                    </div>
                                {{/each}}


                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h2>Create a squad to continue</h2>
                {{/if}}
            </div>

            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}