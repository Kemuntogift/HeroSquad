{{#partial "content"}}
    <div id="hero" class="card">
        <img src="https://steamcdn-a.akamaihd.net/steamcommunity/public/images/items/627270/4ea1f5587e95ede8fbd1451706ee7fb40487f7b1.jpg" class="img-fluid ">
        <div class="card-img-overlay   d-flex flex-column align-items-center justify-content-center">

            <div class="hero-text text-center">
                <form class="form" action="/new/hero" method="post">
                    <h1>Create Hero</h1>
                    <input type="text" placeholder="Hero's name" name="name" required><br>

                    <input type="number" placeholder="Hero's age" name="age" required><br>
                    <input type="text" placeholder="Hero's powers" name="power" required><br>
                    <input type="text" placeholder="Hero's weakness" name="weakness" required>

                    <button class="btn btn-primary mx-auto d-block submit" id="submitButton" value="submit" type="submit">submit</button>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}